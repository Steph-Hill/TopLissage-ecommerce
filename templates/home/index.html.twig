{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
   
<h1>Mes Produits</h1>

{% for product in products %}

    <ul>
        <h1>{{product.name}}</h1>
        <img src="{{ asset('upload/images/products/' ~ product.image) }}" alt="" width="400" height="300">*
        <p>{{product.description|striptags }}</p> {# striptags supprime le format des balise html visible #}
        <h5>{{product.price}} â‚¬</h5>
        <h5>{{product.quantity}}</h5>
        <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-dark">Ajouter au panier</a>
        <hr>
    </ul>
    
{% endfor %}
   
</div>
{% endblock %}
